<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_separator"
    android:layout_marginBottom="@dimen/standard_separator">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:src="@drawable/ic_innovation" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a title"
        android:ellipsize="end"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_alignTop="@id/iv_icon"
        android:layout_toEndOf="@id/iv_icon"
        android:paddingStart="@dimen/standard_separator"
        android:paddingEnd="@dimen/standard_separator"
        android:layout_toRightOf="@id/iv_icon" />

    <TextView
        android:id="@+id/tv_agency"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_title"
        android:layout_below="@+id/tv_title"
        android:ellipsize="end"
        android:paddingEnd="@dimen/standard_separator"
        android:paddingStart="@dimen/standard_separator"
        android:text="This is a agency"
        android:layout_alignLeft="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="Description"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_toEndOf="@id/iv_icon"
        android:layout_below="@id/tv_agency"
        android:paddingStart="@dimen/standard_separator"
        android:paddingEnd="@dimen/standard_separator"
        android:layout_toRightOf="@id/iv_icon" />

</RelativeLayout>
</android.support.v7.widget.CardView>